rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read access to jobs for real-time status updates on the client.
    // Disallow write access from the client.
    match /jobs/{jobId} {
      allow read: if true;
      allow write: if false;
    }

    // Default deny for all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
