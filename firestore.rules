rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // WARNING: For MVP only - allows public read access to jobs.
    // In a production environment, implement proper authentication and ownership checks.
    match /jobs/{jobId} {
      allow read: if true;
      allow write: if false; // Keep client-side writes disallowed
    }

    // Default deny for all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
